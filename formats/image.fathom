//! A simple image data format.

def pixel = {
    /// Red value.
    red <- s32be,
    /// Green value.
    green <- s32be,
    /// Blue value.
    blue <- s32be,
};

def main = {
    /// The width of the image, in pixels.
    width <- u32be,
    /// The height of the image, in pixels.
    height <- u32be,
    /// The pixel data.
    pixels <- repeat_len64 (width * height) pixel,
};
